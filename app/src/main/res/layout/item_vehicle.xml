<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/crdVehicleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_20">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/crdVehicle"
            android:layout_width="@dimen/dp_150"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="4dp"
            >

            <ImageView
                android:id="@+id/ivVehicleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvRentPerDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toEndOf="@id/crdVehicle"
            android:fontFamily="@font/days_one"
            android:gravity="start"
            android:text="@string/price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/size_18sp" />

        <Button
            android:id="@+id/btnVehicleOwnerCall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/tvRentPerDay"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toEndOf="@id/crdVehicle"
            android:background="@drawable/button_bgd"
            android:drawableStart="@drawable/ic_baseline_call_24"
            android:fontFamily="@font/fredoka_one"
            android:paddingStart="@dimen/dp_20"
            android:text="@string/call"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/size_15sp" />

        <TextView
            android:id="@+id/tvVehicleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/crdVehicle"
            android:fontFamily="@font/lexend_bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/vehicle_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />



        <!-- Rent per Day -->


        <!-- Contact Owner Button -->

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
